<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata minClientVersion="2.8.1">
    <id>Xam.Plugins.Logging</id>
    <version>1.0.0</version>
    <title>Logging Plugin for Xamarin</title>
    <authors>Nikolaj Hesselholt Skov</authors>
    <owners>Nikolaj Hesselholt Skov</owners>
    <licenseUrl>https://github.com/nikolajskov/LoggingPlugin/blob/master/LICENSE</licenseUrl>
    <projectUrl>https://github.com/nikolaj/LoggingPlugin</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>
      Logging Plugin for Xamarin provides a consistent, cross platform logging plugin.
    </description>
    <summary>Cross platform logging for Xamarin.iOS, Xamarin.Android, and Xamarin.Forms</summary>
    <tags>xamarin, logging, pcl, plugin for xamarin, plugin, android, xamarin.forms, ios, monoandroid, monodroid</tags>
    <dependencies>
      <group targetFramework="netstandard1.0">
        <dependency id="NETStandard.Library" version="1.6.1" />
      </group>
      <group targetFramework="MonoAndroid10" />
      <group targetFramework="Xamarin.iOS10" />
      <group targetFramework="portable-net45+win+wpa81+wp80" />
    </dependencies>
    <releaseNotes>
      See Changelog: https://github.com/nikolajskov/LoggingPlugin/blob/master/CHANGELOG.md
    </releaseNotes>
  </metadata>

  <files>
    <!--NetStandard/PCL-->
    <file src="..\src\Plugin.Logging\bin\Release\netstandard1.0\Plugin.Logging.*" target="lib\netstandard1.0" />
    
    <!--Xamarin.Android-->
    <file src="..\src\Plugin.Logging.Android\bin\Release\Plugin.Logging.*" target="lib\MonoAndroid10" />
    
    <!--Xamarin.iOS -->
    <file src="..\src\Plugin.Logging.iOS\bin\Release\Plugin.Logging.*" target="lib\Xamarin.iOS10" />
  </files>
</package>